/* pages/comment-list/index.wxss */
.container{
  background: #fff
}

.title {
  font-weight: bold;
  margin: 30rpx;
}

.user-info {
  margin-bottom: 20rpx;
  align-items: center;
}

.user-info .info{
  margin-left: 10rpx;
}

.user-info .nick-name {
  font-size: 32rpx;
}

.create-time {
  font-size: 28rpx;
  color: #999;
}

.user-info image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.list-item {
  padding: 15rpx;
  border-bottom: 1rpx solid #eee;
}

.content {
  font-size: 30rpx;
}

.footer-box {
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  border-top: 1rpx solid #eee;
  display: flex;
  text-align: center;
}

.comment {
  width: 700rpx;
  font-size: 28rpx;
  height: 68rpx;
  line-height: 68rpx;
  background: #EAEAEA;
  margin-left: 25rpx;
  margin-right: 25rpx;
  align-self: center;
  text-align: center;
  color: #888888;
  border-radius: 10rpx;
}